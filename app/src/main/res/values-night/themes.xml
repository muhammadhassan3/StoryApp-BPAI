<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StoryApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/medium_purple</item>
        <item name="colorPrimaryVariant">@color/electric_violer</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins</item>
    </style>
    <style name="Theme.StoryApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">4dp</item>
    </style>
    <style name="Theme.StoryApp.Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">4dp</item>
    </style>
</resources>